extend ../../layout

block head
    style.
      span.headLeft {
      font-size: larger;
      position: relative;
      left: 52%;
      top: -48px;
      color: white;
      }
      div#headerFront {
      position: fixed;
      }
      td {
      text-align: center;
      }
    link(rel='stylesheet', href='/css/download.css')
    script(src='../common/js/dailyMatch/resultDetail.js')
    script(src='js/jquery.form.js')

block sidebar
  #sidebar
    a.visible-phone(href='/')
      i.icon.icon-home
      |  主页
    |   
    ul
      if role === 1
        li
          a(href='/paper')
            i.icon.icon-inbox
            |  
            span 门票验证
        |     
        li
          a(href='/orders')
            i.icon.icon-th
            |  
            span 订单查询
        |     
        li
          a(href='/vip')
            i.icon.icon-th
            |  
            span 会员管理 
      if role > 9
        li.submenu.open
          a(href='#')
            i.icon.icon-list
            |  
            span 日赛
            |  
            span.label.label-important 4
          |       
          ul
            li
              a(href='/chooseclub?id=1') 发布日赛
            li
              a(href='/chooseclub?id=2') 日赛日历
            li.active
              a(href='/dailyMatchResult') 发布日赛结果
            li
              a(href='/chooseclub?id=3') 日赛系列列表
        li
          a(href='/chooseclub?id=4')
            i.icon.icon-th
            |  
            span 赛事结构列表
        li.submenu
          a(href='#')
            i.icon.icon-list
            |  
            span 俱乐部
            |  
            span.label.label-important 1
          |       
          ul
            li
              a(href='/addClub') 添加俱乐部   

block content
  #content
    #content-header
      #breadcrumb
        a.tip-bottom(href='/', title='Go to Home')
          i.icon-home
          |  主页
        |  
        a.tip-bottom(href='/matchSettingList') 日赛结果
        | 
        a.tip-bottom(href='#') #{title}
        |  
      h1 #{title}
    .container-fluid
      hr
      |   
      .row-fluid
        .widget-box
          .widget-title
            span.icon
              i.icon-align-justify
            |           
            h5 日赛结果详情
          |  
          .widget-content.nopadding
            form.form-horizontal.dailyMatchInfo(enctype="multipart/form-data")
              .control-group
                label.control-label 日赛结果名称 :
                |               
                .controls
                  input.span5(type='text', placeholder='日赛结果名称', name='name', value='#{detail.name}') 
            form.form-horizontal.resultForm(enctype="multipart/form-data")
              .control-group
                label.control-label 日赛结果 :
                |               
                .uploader.white
                  input.filename(type='', readonly='')
                  input.button(type='button', name='file', value='选择文件') 
                  input(type='file', name='file')
                .con-file.white
                  input.subResultTable(type='button', value='导入')
              .widget-content.nopadding
                table.table.table-bordered.data-table
                  thead
                    tr
                      th 名次
                      |               
                      th 姓名
                      |               
                      th 奖金
                      |               
                      th 备注
                  |           
                  tbody.resultTable
                    each item in result.items
                      tr
                        td #{item.rank}
                        |               
                        td #{item.name}
                        |               
                        td #{item.bonus}
                        |               
                        td #{item.remark}
              |             
              .form-actions
                //input.btn.btn-success.success(type='button', value='修改')
                input.btn.btn-success.back(type='button', value='返回')
