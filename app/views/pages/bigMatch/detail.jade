extend ../../layout

block head
    style.
      td {
      text-align: center;
      }
    link(rel='stylesheet', href='/css/download.css')
    script(src='../common/js/bigMatch/addBigMatch.js')

block sidebar
  #sidebar
    a.visible-phone(href='/')
      i.icon.icon-home
      |  主页
    |   
    ul
      if role === 1
        li
          a(href='/paper')
            i.icon.icon-inbox
            |  
            span 门票验证
        |     
        li
          a(href='/orders')
            i.icon.icon-th
            |  
            span 订单查询
        |     
        li
          a(href='/vip')
            i.icon.icon-th
            |  
            span 会员管理 
      if role > 9
        li.submenu.open
          a(href='#')
            i.icon.icon-list
            |  
            span 大赛
            |  
            span.label.label-important 4
          |       
          ul
            li.active
              a(href='/bigChooseClub/1') 大赛系列列表
            li
              a(href='/bigChooseClub/2') 发布大赛结果
        li.submenu
          a(href='#')
            i.icon.icon-list
            |  
            span 日赛
            |  
            span.label.label-important 4
          |       
          ul
            li
              a(href='/chooseclub?id=1') 发布日赛
            li
              a(href='/chooseclub?id=2') 日赛日历
            li
              a(href='/dailyMatchResult') 发布日赛结果
            li
              a(href='/chooseclub?id=3') 日赛系列列表
        li
          a(href='/chooseclub?id=4')
            i.icon.icon-th
            |  
            span 赛事结构列表
        li.submenu
          a(href='#')
            i.icon.icon-list
            |  
            span 俱乐部
            |  
            span.label.label-important 1
          |       
          ul
            li
              a(href='/addClub') 添加俱乐部   

block content
  #content
    #content-header
      #breadcrumb
        a.tip-bottom(href='/', title='Go to Home')
          i.icon-home
          |  主页
        |  
        a.tip-bottom(href='#') #{title}
        |  
    .container-fluid
      hr
      |   
      .row-fluid
        .widget-box
          .widget-title
            span.icon
              i.icon-align-justify
            |           
            h5 大赛详情
          |  
          .widget-content.nopadding
            form.form-horizontal.bigMatchForm(enctype="multipart/form-data")
                table.table.table-bordered.data-table
                  thead
                    tr
                      th ID
                      th 赛事时间
                      th 赛事名称
                      th 买入金额
                      th 服务费
                      th 开始时间
                      th 报名截止时间
                      th 是否可以报名
                      th 单笔报名费
                      th 是否需要兑换人民币
                      th 货币类型
                      th 赛事状态
                      th 是否晋级赛
                      th 结构表ID
                      th 盲注结构表
                      th 奖金结构表
                      th 赛事结果表
                      th 备注
                      th 设置
                  |           
                  tbody.bigMatchTable
                    each item in detail
                      tr 
                        td  #{item.bigMatch_id}
                        td  #{item.match_day}
                        td  #{item.name}
                        td  #{item.real_buyin}
                        td  #{item.rake_buyin}
                        td  #{item.open_time}
                        td  #{item.close_reg_time}
                        td  #{item.can_register}
                        td  #{item.unit_price}
                        td  #{item.need_exchange}
                        td  #{item.exchangeRate_id}
                        td  #{item.state}
                        td  #{item.isPromoted}
                        td  #{item.matchSetting_id}
                        td  #{item.haveMatchSetting}
                        td  #{item.haveMatchBonus}
                        td  #{item.haveMatchResult}
                        td  #{item.remark}
                        td  
                          a(href='/setDetail/#{item.bigMatch_id}') 详情
            
