extend ../../layout

block head
  link(rel='stylesheet', href='/css/download.css')
  script(src='../common/js/bigMatch/chooseClub.js')
  
block sidebar
  #sidebar
    a.visible-phone(href='/')
      i.icon.icon-home
      |  主页
    |   
    ul
      if role === 1
        li
          a(href='/paper')
            i.icon.icon-inbox
            |  
            span 门票验证
        |     
        li
          a(href='/orders')
            i.icon.icon-th
            |  
            span 订单查询
        |   
        li
          a(href='/vip')
            i.icon.icon-th
            |  
            span 会员管理
      if role > 9   
        li.submenu.open
          a(href='#')
            i.icon.icon-list
            |  
            span 大赛
            |  
            span.label.label-important 4
          |       
          ul.bigMatch
            li
              a(href='/bigChooseClub/1') 大赛系列列表
            li
              a(href='/bigChooseClub/2') 发布大赛结果
        li.submenu
          a(href='#')
            i.icon.icon-list
            |  
            span 日赛
            |  
            span.label.label-important 4
          |       
          ul.match
            li
              a(href='/dailyChooseClub?id=1') 发布日赛
            li
              a(href='/dailyChooseClub?id=2') 日赛日历
            li
              a(href='/dailyChooseClub?id=3') 日赛系列列表
            li
              a(href='/dailyMatchResult') 发布日赛结果
        li.settingLabel
          a(href='/dailyChooseClub?id=4')
            i.icon.icon-th
            |  
            span 赛事结构列表
        li.submenu
          a(href='#')
            i.icon.icon-list
            |  
            span 俱乐部
            |  
            span.label.label-important 1
          |       
          ul
            li
              a(href='/addClub') 添加俱乐部


block content
    #content
      #content-header
        #breadcrumb
          a.tip-bottom(href='/', title='Go to Home')
            i.icon-home
            |  主页
          a.tip-bottom(href='#') #{title}
          |   
      // Action boxes
      .container-fluid
        hr
        |   
        .row-fluid
          .widget-box
            .widget-title
              span.icon
                i.icon-align-justify
              |           
              h5 
            |  
            .widget-content.nopadding
              form.form-horizontal.addMatch(enctype="multipart/form-data")
                .control-group
                  label.control-label 地区 :
                  |               
                  .controls
                    input(type='hidden',name='id', value='#{id}')
                    select(name='continent')
                      option(value='0', selected='true') 请选择
                      option(value='亚洲') 亚洲
                      option(value='欧洲') 欧洲
                      option(value='美洲') 美洲
                      option(value='大洋洲') 大洋洲
                  .control-group
                    label.control-label 国家 :
                    |               
                    .controls
                      select(name='country')
                        option(value='0', selected='true') 请选择
                  .control-group
                    label.control-label 城市 :
                    |               
                    .controls
                      select(name='city')
                        option(value='0', selected='true') 请选择
                  .control-group
                    label.control-label 组织 :
                    |               
                    .controls
                      select(name='organization')
                        option(value='0', selected='true') 请选择

                .form-actions
                  button.btn.btn-success.success(type='button') 提交
      
    
    
