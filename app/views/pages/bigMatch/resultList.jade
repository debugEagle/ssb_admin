extend ../../layout

block head
    style.
      td {
      text-align: center;
      }
    link(rel='stylesheet', href='/css/download.css')
    script(src='../common/js/bigMatch/addBigMatch.js')

block sidebar
  #sidebar
    a.visible-phone(href='/')
      i.icon.icon-home
      |  主页
    |   
    ul
      if role === 1
        li
          a(href='/paper')
            i.icon.icon-inbox
            |  
            span 门票验证
        |     
        li
          a(href='/orders')
            i.icon.icon-th
            |  
            span 订单查询
        |     
        li
          a(href='/vip')
            i.icon.icon-th
            |  
            span 会员管理 
      if role > 9
        li.submenu.open
          a(href='#')
            i.icon.icon-list
            |  
            span 大赛
            |  
            span.label.label-important 4
          |       
          ul
            li
              a(href='/bigChooseClub/1') 大赛系列列表
            li.active
              a(href='/bigChooseClub/2') 发布大赛结果 
        li.submenu
          a(href='#')
            i.icon.icon-list
            |  
            span 日赛
            |  
            span.label.label-important 4
          |       
          ul
            li
              a(href='/dailyChooseClub?id=1') 发布日赛
            li
              a(href='/dailyChooseClub?id=2') 日赛日历
            li
              a(href='/dailyChooseClub?id=3') 日赛系列列表
            li
              a(href='/dailyMatchResult') 发布日赛结果
        li
          a(href='/dailyChooseClub?id=4')
            i.icon.icon-th
            |  
            span 赛事结构列表
        li.submenu
          a(href='#')
            i.icon.icon-list
            |  
            span 俱乐部
            |  
            span.label.label-important 1
          |       
          ul
            li
              a(href='/addClub') 添加俱乐部   

block content
  #content
    #content-header
      #breadcrumb
        a.tip-bottom(href='/', title='Go to Home')
          i.icon-home
          |  主页
        | 
        a.tip-bottom(href='#') #{title}
        |  
    .container-fluid
      hr
      |   
      .row-fluid
        .widget-box
          .widget-title
            span.icon
              i.icon-align-justify
            |           
            h5 大赛详情
          |  
          .widget-content.nopadding
            form.form-horizontal.bigMatchForm(enctype="multipart/form-data")
              .widget-content.nopadding
                table.table.table-bordered.data-table
                  thead
                    tr
                      th ID
                      th 赛事时间
                      th 赛事名称
                      th 赛事结果
                  |           
                  tbody.bigMatchTable
                    each list in lists
                      tr
                        td #{list.bigMatch_id}
                        td #{list.match_day}
                        td #{list.name}
                        if list.bigMatchResult === null
                          td 
                            a(href='/addBigMatchResult/#{list.bigMatch_id}') 点击添加
                        else
                          td 
                            a(href='/bigMatchResultDetail/#{list.bigMatch_id}') 点击查看
                    
                            
