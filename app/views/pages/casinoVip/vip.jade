extend ../../layout

block head
    style.
      span.headLeft {
      font-size: larger;
      position: relative;
      left: 52%;
      top: -48px;
      color: white;
      }
      div#headerFront {
      position: fixed;
      }
      td {
      text-align: center;
      }
    script(src='../common/js/casinoVip/vip.js')

block sidebar
  #sidebar
    a.visible-phone(href='/')
      i.icon.icon-home
      |  主页
    |   
    ul
      if role === 1
        li
          a(href='/paper')
            i.icon.icon-inbox
            |  
            span 门票验证
        |     
        li
          a(href='/orders')
            i.icon.icon-th
            |  
            span 订单查询
        |     
        li.active
          a(href='/vip')
            i.icon.icon-th
            |  
            span 会员管理
      if role > 9
        li.submenu
          a(href='#')
            i.icon.icon-list
            |  
            span 我的赛事
            |  
            span.label.label-important 4
          |       
          ul
            li
              a(href='/addMatch') 发布赛事
            li
              a(href='/matchList') 赛事日历
            li
              a(href='/matchSerieList') 赛事系列列表
            li
              a(href='/matchSettingList') 赛事结构列表
        li.submenu
          a(href='#')
            i.icon.icon-list
            |  
            span 俱乐部
            |  
            span.label.label-important 1
          |       
          ul
            li
              a(href='/addClub') 添加俱乐部

block content
    #content
      #content-header
        #breadcrumb
          a.tip-bottom(href='/', title='Go to Home')
            i.icon-home
            |  主页
          |  
          a.tip-bottom(href='/vip') 会员管理
        |     
        //h1 #{title}
      |   
      .container-fluid
        hr
        |   
        div
          input.cardno(type='text', style='float:left', data-provide='typeahead', placeholder='会员卡号')
          |        
          button.btn.sub(type='button') 查询
        |     
        .widget-box
          .widget-title
            span.icon
              i.icon-th
            |         
            h5 会员信息
          |       
          .widget-content.nopadding
            table.table.table-bordered.data-table
              thead
                tr
                  th 会员卡号
                  |               
                  th 姓名
                  | 
                  th 昵称
                  |              
                  th 手机号
                  |               
                  th 身份证号
              |           
              tbody
                .paper_table
                  tr.gradeA
                    td.ticketInfo(colspan='5') 请输入会员卡号
    
