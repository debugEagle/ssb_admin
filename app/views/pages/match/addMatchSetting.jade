extend ../../layout

block head
    style.
      span.headLeft {
      font-size: larger;
      position: relative;
      left: 52%;
      top: -48px;
      color: white;
      }
      div#headerFront {
      position: fixed;
      }
      td {
      text-align: center;
      }
    link(rel='stylesheet', href='/css/download.css')
    script(src='../common/js/match/addMatchSetting.js')
    script(src='js/jquery.form.js')

block sidebar
  #sidebar
    a.visible-phone(href='/')
      i.icon.icon-home
      |  主页
    |   
    ul
      if role === 1
        li
          a(href='/paper')
            i.icon.icon-inbox
            |  
            span 门票验证
        |     
        li
          a(href='/orders')
            i.icon.icon-th
            |  
            span 订单查询
        |     
        li
          a(href='/vip')
            i.icon.icon-th
            |  
            span 会员管理 
      if role > 9
        li.submenu.open
          a(href='#')
            i.icon.icon-list
            |  
            span 日赛
            |  
            span.label.label-important 4
          |       
          ul
            li
              a(href='/chooseclub?id=1') 发布日赛
            li
              a(href='/chooseclub?id=2') 日赛日历
            li
              a(href='/dailyMatchResult') 发布日赛结果
            li
              a(href='/chooseclub?id=3') 日赛系列列表
        li
          a(href='/chooseclub?id=4')
            i.icon.icon-th
            |  
            span 赛事结构列表
        li.submenu
          a(href='#')
            i.icon.icon-list
            |  
            span 俱乐部
            |  
            span.label.label-important 1
          |       
          ul
            li
              a(href='/addClub') 添加俱乐部   

block content
  #content
    #content-header
      #breadcrumb
        a.tip-bottom(href='/', title='Go to Home')
          i.icon-home
          |  主页
        |  
        a.tip-bottom(href='/matchSettingList') 赛事结构列表
        | 
        a.tip-bottom(href='#') #{title}
        |  
      h1 #{title}
    .container-fluid
      hr
      |   
      .row-fluid
        .widget-box
          .widget-title
            span.icon
              i.icon-align-justify
            |           
            h5 赛事结构信息表
          |  
          .widget-content.nopadding
            form.form-horizontal.dailyMatchInfo(enctype="multipart/form-data")
              .control-group
                label.control-label 赛事结构名称 :
                |               
                .controls
                  input.span5(type='text', placeholder='赛事结构名称', name='name')
              .control-group
                label.control-label 涨盲时间 :
                |               
                .controls
                  input.span5(type='text', placeholder='涨盲时间', name='blindTime')
                  | 分钟 
              .control-group
                label.control-label 初始筹码 :
                |               
                .controls
                  input.span5(type='text', placeholder='初始筹码', name='chip')
              .control-group
                label.control-label 备注 :
                |               
                .controls
                  textarea.span5(name='remark') 
            form.form-horizontal.settingForm(enctype="multipart/form-data")
              .control-group
                label.control-label 赛事结构表 :
                |               
                .uploader.white
                  input.filename(type='', readonly='')
                  input.button(type='button', name='file', value='选择文件')
                  input(type='file', name='file')
                .con-file.white
                  input.subSettingTable(type='button', value='导入')
              .widget-content.nopadding
                table.table.table-bordered.data-table
                  thead
                    tr
                      th 级别
                      |               
                      th 小盲
                      |               
                      th 大盲
                      |               
                      th 前注
                  |           
                  tbody.settingTable
            form.form-horizontal.bonusesForm(enctype="multipart/form-data")
              .control-group
                label.control-label 奖金结构表 :
                |               
                .uploader.white
                  input.filename(type='', readonly='')
                  input.button(type='button', name='file', value='选择文件')
                  input(type='file', name='file')
                .con-file.white
                  input.subBonusesTable(type='button', value='导入')
              .widget-content.nopadding
                table.table.table-bordered.data-table
                  thead
                    tr
                      th 名次
                      |               
                      th 奖励
                      |               
                      th 说明
                  |           
                  tbody.bonusesTable
              |             
              .form-actions
                input.btn.btn-success.success(type='button', value='新增')
                input.btn.btn-success.back(type='button', value='返回')
