extend ../../layout

block head
    style.
      span.headLeft {
      font-size: larger;
      position: relative;
      left: 52%;
      top: -48px;
      color: white;
      }
      div#headerFront {
      position: fixed;
      }
      td {
      text-align: center;
      }
    script(src='common/js/match/matchList.js')

block sidebar
  #sidebar
    a.visible-phone(href='/')
      i.icon.icon-home
      |  主页
    |   
    ul
      if role === 1
        li
          a(href='/paper')
            i.icon.icon-inbox
            |  
            span 门票验证
        |     
        li
          a(href='/orders')
            i.icon.icon-th
            |  
            span 订单查询
        li
          a(href='/vip')
            i.icon.icon-th
            |  
            span 会员管理
      if role > 9
        li.submenu.open
          a(href='#')
            i.icon.icon-list
            |  
            span 我的赛事
            |  
            span.label.label-important 4
          |       
          ul
            li
              a(href='/addMatch') 发布赛事
            li.active
              a(href='/matchList') 赛事日历
            li
              a(href='/matchSerieList') 赛事系列列表
            li
              a(href='/matchSettingList') 赛事结构列表
        li.submenu
          a(href='#')
            i.icon.icon-list
            |  
            span 俱乐部
            |  
            span.label.label-important 1
          |       
          ul
            li
              a(href='/addClub') 添加俱乐部

