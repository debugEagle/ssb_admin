extend ../layout

block head
    style.
      span.headLeft {
      font-size: larger;
      position: relative;
      left: 52%;
      top: -48px;
      color: white;
      }
      div#headerFront {
      position: fixed;
      }
      td {
      text-align: center;
      }
    script(type='text/javascript').
      var tokenId = $.cookie('tokenId');
      if (!tokenId || tokenId == 'null') {
          self.location = "/";
      }
    script(src='common/js/paper.js')
    
block sidebar
  #sidebar
    a.visible-phone(href='#')
      i.icon.icon-home
      |  主页
    |   
    ul
      li
        a(href='/paper')
          i.icon.icon-inbox
          |  
          span 门票验证
      |     
      li
        a(href='/orders')
          i.icon.icon-th
          |  
          span 订单查询
      if role > 1
        li.active
          a(href='/publish')
            i.icon.icon-th
            |  
            span 发布赛事

block content
  #content
    #content-header
      #breadcrumb
        a.tip-bottom(href='/index', title='Go to Home')
          i.icon-home
          |  主页
        |  
        a.tip-bottom(href='#') #{title}
        |  
      h1 #{title}
    .container-fluid
      hr
      |   
      .row-fluid
        .span6
        .widget-box
          .widget-title
            span.icon
              i.icon-align-justify
            |           
            h5 具体信息
          |         
          .widget-content.nopadding
            form.form-horizontal(action='#', method='get')
              .control-group
                label.control-label First Name :
                |               
                .controls
                  input.span11(type='text', placeholder='First name')
              |             
              .control-group
                label.control-label Last Name :
                |               
                .controls
                  input.span11(type='text', placeholder='Last name')
              |             
              .control-group
                label.control-label Password input
                |               
                .controls
                  input.span11(type='password', placeholder='Enter Password')
              |             
              .control-group
                label.control-label Company info :
                |               
                .controls
                  input.span11(type='text', placeholder='Company name')
              |             
              .control-group
                label.control-label Description field:
                |               
                .controls
                  input.span11(type='text')
                  |                 
                  span.help-block Description field
              |             
              .control-group
                label.control-label Message
                |               
                .controls
                  textarea.span11
              |             
              .form-actions
                button.btn.btn-success(type='submit') 保存
                |       
