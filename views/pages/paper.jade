extend ../layout

block head
    style.
      span.headLeft {
      font-size: larger;
      position: relative;
      left: 52%;
      top: -48px;
      color: white;
      }
      div#headerFront {
      position: fixed;
      }
      td {
      text-align: center;
      }
    script(type='text/javascript').
      var tokenId = $.cookie('tokenId');
      if (!tokenId || tokenId == 'null') {
          self.location = "/login";
      }
    script(src='common/js/paper.js')
    
block sidebar
  #sidebar
    a.visible-phone(href='#')
      i.icon.icon-home
      |  主页
    |   
    ul
      li.active
        a(href='/paper')
          i.icon.icon-inbox
          |  
          span 门票验证
      |     
      li
        a(href='/orders')
          i.icon.icon-th
          |  
          span 订单查询


block content
    #content
      #content-header
        #breadcrumb
          a.tip-bottom(href='/', title='Go to Home')
            i.icon-home
            |  主页
          |  
          a.current(href='#') 门票验证
        |     
        h1 门票验证
      |   
      .container-fluid
        hr
        | &#x9;   
        div
          input.serial(type='text', style='float:left', data-provide='typeahead')
          |        
          button.btn.sub(type='button') 提交
        |     
        .widget-box
          .widget-title
            span.icon
              i.icon-th
            |         
            h5 门票信息
          |       
          .widget-content.nopadding
            table.table.table-bordered.data-table
              thead
                tr
                  th 门票编号
                  |               
                  th 赛事名称
                  |               
                  th 用户名
                  |               
                  th 手机号
                  |               
                  th 金额
                  |               
                  th 状态
                  |               
                  th 操作
              |           
              tbody
                .paper_table
                  tr.gradeA
                    td.ticketInfo(colspan='7') 请输入门票号
    
    
