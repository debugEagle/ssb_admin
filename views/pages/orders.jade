extend ../layout

block head
  link(rel='stylesheet', href='css/uniform.css')
  link(rel='stylesheet', href='css/select2.css')
  style.
    span.headLeft {
    font-size: larger;
    position: relative;
    left: 52%;
    top: -48px;
    color: white;
    }
    div#headerFront {
    position: fixed;
    }
    div#s2id_autogen1 {
    width: 10%;
    margin-top: 5px;
    }
    span.info_status {
    margin: 9px 11px 0 0;
    float: left;
    }
    span.info_label {
    margin: 9px 11px 0 0;
    float: right;
    }
    .orderInfo {
    text-align: center;
    }
    button.btn.query {
    float: right;
    margin-right: 62%;
    width: 7%;
    }
    .end {
    margin-left: 4%;
    }
    input#start {
    width: 10%;
    text-align: center;
    }
    input#end {
    width: 10%;
    text-align: center;
    }
    input::-ms-input-placeholder{text-align: center;}
    input::-webkit-input-placeholder{text-align: center;}
  script(src='js/jquery.min.js')
  script(src='common/js/jquery.cookie.js')
  script(type='text/javascript').
    var tokenId = $.cookie('tokenId');
    if (!tokenId || tokenId == 'null') {
    self.location = "/login";
    }
  script(src='common/js/orders.js')
  script(src='common/js/public.js')
  link(rel='stylesheet', type='text/css', media='all', href='css/daterangepicker-bs3.css')
  script(type='text/javascript', src='js/moment.js')
  script(type='text/javascript', src='js/daterangepicker.js')
  script(type='text/javascript', src='js/select2.min.js')
  script(type='text/javascript', src='js/jquery.ui.custom.js')
  script(type='text/javascript', src='js/jquery.uniform.js')
  script(type='text/javascript', src='js/jquery.dataTables.min.js')
  script(type='text/javascript', src='js/matrix.js')
  script(type='text/javascript', src='js/matrix.tables.js')

block sidebar
  #sidebar
    a.visible-phone(href='#')
      i.icon.icon-home
      |  主页
    |   
    ul
      li
        a(href='/paper')
          i.icon.icon-inbox
          |  
          span 门票验证
      |     
      li.active
        a(href='/orders')
          i.icon.icon-th
          |  
          span 订单查询


block content
    #content
      #content-header
        #breadcrumb
          a.tip-bottom(href='/', title='Go to Home')
            i.icon-home
            |  主页
          |  
          a.current(href='#') 订单查询
        |     
        h1 订单查询
      |   
      .container-fluid
        hr
        |     
        div
          //
            <form class="form-horizontal">
            <fieldset>
          .start
            input#start(type='text', readonly='', name='start', placeholder='开始时间')
            |                
            input#end.end(type='text', readonly='', name='end', placeholder='结束时间')
            |                
            button.btn.query(type='button') 查询
          //
            </fieldset>
            </form>
        |     
        .widget-box
          .widget-title
            span.icon
              i.icon-th
            |         
            span.info_status 订单状态
            |         
            select
              option(value='', selected='true') 全部
              |           
              option(value='0') 未结算
              |     
              option(value='1') 已结算
            |         
            span.info_label 总额：0元
          |       
          .widget-content.nopadding
            table.table.table-bordered.table-striped
              thead
                tr
                  th 序号
                  |               
                  th 赛事名称
                  |               
                  th 订单编号
                  |               
                  th 用户名
                  |               
                  th 手机号
                  |               
                  th 时间
                  |               
                  th 是否结算
              |           
              tbody.orders_table
                tr
                  td.orderInfo(colspan='7') 暂无数据
        |     
        #DataTables_Table_0_paginate.dataTables_paginate.fg-buttonset.ui-buttonset.fg-buttonset-multi.ui-buttonset-multi.paging_full_numbers
          a#DataTables_Table_0_first.first.ui-corner-tl.ui-corner-bl.fg-button.ui-button.ui-state-default(tabindex='0') 首页
          |         
          a#DataTables_Table_0_previous.previous.fg-button.ui-button.ui-state-default(tabindex='0') 上一页
          |         
          a#DataTables_Table_0_next.next.fg-button.ui-button.ui-state-default(tabindex='0') 下一页
          |         
          a#DataTables_Table_0_last.last.ui-corner-tr.ui-corner-br.fg-button.ui-button.ui-state-default(tabindex='0') 尾页
    
    
